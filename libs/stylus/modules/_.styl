// Enter your custom styling here
html
	min-height 100%
	height 100%
body
	background-color #9853b2
	min-height 100%
	margin 0
	padding 0
	font-size 100%
	background radial-gradient(#787ce2 -90%, #1e3352)

.logo
	display block
	margin-bottom 2rem
	pointer-events none
	user-select none
	img
		max-height 2.5rem

.aligner
	display flex
	align-items center
	justify-content center
	min-height 100%
	text-align center

#darken
	text-align center
	padding 3em
	h3
		margin 2rem 0 1rem 0
		color #fff
	p
		color #cacbe6
		font-size 1.2rem
		line-height 2rem
	small
		color #a0a7ca
		font-size 1rem
	.button-group
		padding 2rem 0 2rem 0
		.button
			& + .button
				margin-left 1rem
		+below('m')
			.button
				display block
				& + .button
					margin 1rem 0 0 0
